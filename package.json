{
  "name": "ts-node-api",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "scripts": {
    "stop": "pm2 stop all",
    "dev": "dotenvx run -- pm2-runtime start ecosystem.config.js --only dev",
    "start": "dotenvx run -- pm2-runtime start ecosystem.config.js --only prod",
    "raw:dev": "NODE_ENV=development dotenvx run -- tsx ./src",
    "raw:start": "NODE_ENV=production dotenvx run -- node ./dist",
    "clean": "gts clean",
    "build": "tsc -p tsconfig.build.json",
    "prebuild": "gts clean",
    "postbuild": "tsc-alias",
    "tidy": "npm run lint && npm run fix",
    "lint": "gts lint",
    "fix": "gts fix",
    "test": "dotenvx run -- vitest --run",
    "test:watch": "dotenvx run -- vitest",
    "ignore-prepare": "npm run build",
    "ignore-pretest": "npm run build",
    "posttest": "npm run lint",
    "reset": "rm -rf node_modules package-lock.json && npm i"
  },
  "author": "diegoaltoworks",
  "license": "MIT",
  "description": "",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.5.5",
    "@types/supertest": "^6.0.2",
    "eslint-plugin-vitest": "^0.5.4",
    "gts": "^5.3.1",
    "husky": "^9.1.5",
    "msw-trpc": "^2.0.0-beta.1",
    "supertest": "^7.0.0",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2",
    "vitest": "^2.0.5",
    "vitest-mock-extended": "^2.0.2"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.14.0",
    "@sentry/node": "^8.29.0",
    "@sentry/profiling-node": "^8.29.0",
    "@trpc/client": "^10.45.2",
    "@trpc/server": "^10.45.2",
    "envalid": "^8.0.0",
    "express": "^4.20.0",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "newrelic": "^12.3.1",
    "pm2": "^5.4.2",
    "trpc-openapi": "^1.2.0",
    "trpc-panel": "^1.3.4",
    "winston": "^3.14.2",
    "winston-transport-sentry-node": "^3.0.0",
    "zod": "^3.23.8"
  },
  "engines": {
    "node": ">=22"
  }
}
